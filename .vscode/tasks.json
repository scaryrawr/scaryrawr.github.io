{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "jekyll build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "jekyll build --watch",
            "group": "build"
        },
        {
            "label": "serve",
            "type": "shell",
            "command": "jekyll serve --livereload"
        }
    ]
}